<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WallSearchView" parent="Widget.AppCompat.SearchView">
        <item name="iconifiedByDefault">false</item>
        <item name="colorControlActivated">@color/grey</item>
    </style>


    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/orange_1</item>


        <item name="colorControlNormal">@color/grey_dark</item>


        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/grey
        </item>



    </style>
</resources>